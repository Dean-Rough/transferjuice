# Database
DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# OpenAI API Key for Terry AI (required)
OPENAI_API_KEY=sk-...

# Admin authentication
ADMIN_API_KEY=your-secure-random-string-here

# Cron job authentication (used by Vercel)
CRON_SECRET=another-secure-random-string-here

# External Data APIs (optional but recommended)
FOOTBALL_DATA_TOKEN=your-football-data-api-token
GUARDIAN_API_KEY=your-guardian-api-key

# Twitter/X API (optional - used for real Twitter data)
TWITTER_BEARER_TOKEN=AAAA...
X_BEARER_TOKEN=AAAA...
USE_REAL_TWITTER_API=false

# Scraping Configuration (optional)
USE_PLAYWRIGHT_SCRAPER=false
USE_SCRAPER_MANAGER=false
PLAYWRIGHT_HEADLESS=true

# Email delivery (optional)
SENDGRID_API_KEY=SG...